@model Product
<div class="card shadow border-0 my-4">
    <form method="post">
        <input asp-for="Id" hidden />
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Delete Product</h2>
                <hr />
            </div>

            <div class="mb-3 row p-1">
                <label asp-for="Title" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="Title" disabled class="form-control form-control-sm" />
                </div>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Description" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <textarea asp-for="Description" disabled class="form-control form-control-sm"></textarea>
                </div>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="ISBN" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="ISBN" disabled class="form-control form-control-sm" />
                </div>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Author" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="Author" disabled class="form-control form-control-sm" />
                </div>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="ListPrice" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="ListPrice" disabled class="form-control form-control-sm" />
                </div>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Price" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="Price" disabled class="form-control form-control-sm" />
                </div>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Price50" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="Price50" disabled class="form-control form-control-sm" />
                </div>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Price100" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="Price100" disabled class="form-control form-control-sm" />
                </div>
            </div>

            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">
                        Back To List
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>
