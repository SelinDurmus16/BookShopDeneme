@model Product
<div class="card shadow border-0 my-4">
    <form method="post">
        <input asp-for="Id" hidden />

        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Edit Product</h2>
                <hr />
            </div>

            <div class="mb-3 row p-1">
                <div class="mb-3 row p-1">
                    <label asp-for="Title" class="ms-2"></label>
                    <input asp-for="Title" class="form-control form-control-sm border-1 shadow" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="Description" class="ms-2"></label>
                    <textarea asp-for="Description" class="form-control form-control-sm border-1 shadow"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="ISBN" class="ms-2"></label>
                    <input asp-for="ISBN" class="form-control form-control-sm border-1 shadow" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Author" class="ms-2"></label>
                    <input asp-for="Author" class="form-control form-control-sm border-1 shadow" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="ListPrice" class="ms-2"></label>
                    <input asp-for="ListPrice" class="form-control form-control-sm border-1 shadow" />
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Price" class="ms-2"></label>
                    <input asp-for="Price" class="form-control form-control-sm border-1 shadow" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Price50" class="ms-2"></label>
                    <input asp-for="Price50" class="form-control form-control-sm border-1 shadow" />
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Price100" class="ms-2"></label>
                    <input asp-for="Price100" class="form-control form-control-sm border-1 shadow" />
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">
                            Back To List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
