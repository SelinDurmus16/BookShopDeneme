@model ProductVM
<div class="card shadow border-0 my-4">
    <form method="post">
        <div class="border p-3 mt-4 light-gray-background">
            <div class="row pb-2">
                <h2 class="text-primary">Create Product</h2>
                <hr />
            </div>

            <div class="mb-3 row p-1">
                <label asp-for="Product.Title" class="ms-2"></label>
                <input asp-for="Product.Title" class="form-control form-control-sm border-1 shadow" />
                <span asp-validation-for="Product.Title" class="text-danger"></span>
            </div>

            <div class="mb-3 row p-1">
                <label asp-for="Product.Description" class="ms-2"></label>
                <textarea asp-for="Product.Description" class="form-control form-control-sm border-1 shadow"></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>

            <div class="mb-3 row p-1">
                <label asp-for="Product.ISBN" class="ms-2"></label>
                <input asp-for="Product.ISBN" class="form-control form-control-sm border-1 shadow" />
                <span asp-validation-for="Product.ISBN" class="text-danger"></span>
            </div>

            <div class="mb-3 row p-1">
                <label asp-for="Product.Author" class="ms-2"></label>
                <input asp-for="Product.Author" class="form-control form-control-sm border-1 shadow" />
                <span asp-validation-for="Product.Author" class="text-danger"></span>
            </div>

            <div class="mb-3 row p-1">
                <label asp-for="Product.ListPrice" class="ms-2"></label>
                <input asp-for="Product.ListPrice" class="form-control form-control-sm border-1 shadow" />
                <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
            </div>

            <div class="mb-3 row p-1">
                <label asp-for="Product.Price" class="ms-2"></label>
                <input asp-for="Product.Price" class="form-control form-control-sm border-1 shadow" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>

            <div class="mb-3 row p-1">
                <label asp-for="Product.Price50" class="ms-2"></label>
                <input asp-for="Product.Price50" class="form-control form-control-sm border-1 shadow" />
                <span asp-validation-for="Product.Price50" class="text-danger"></span>
            </div>

            <div class="mb-3 row p-1">
                <label asp-for="Product.Price100" class="ms-2"></label>
                <input asp-for="Product.Price100" class="form-control form-control-sm border-1 shadow" />
                <span asp-validation-for="Product.Price100" class="text-danger"></span>
            </div>

            <div class="mb-3 row p-1">
                <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                    <option disabled selected>--Select Category</option>
                </select>

                <input asp-for="Product.CategoryId" class="form-control form-control-sm border-1 shadow" />
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>


            <div class="mb-3 row p-1">
                <label asp-for="Product.ImageUrl" class="ms-2"></label>
                <input asp-for="Product.ImageUrl" class="form-control form-control-sm border-1 shadow" />
                <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
            </div>




            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">
                        Back To List
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
